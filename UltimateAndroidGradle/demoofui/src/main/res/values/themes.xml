    <style name="TextAppearance.YourApp.FloatLabel" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="NiftyDialogButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#c0392b</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:onClick">dialogShow</item>
        <item name="android:textSize">20sp</item>
    </style>

    <item type="id" name="drag_handle" />
    <item type="id" name="click_remove" />


    <style name="BiggerText" parent="android:TextAppearance.Holo.Large">
        <item name="android:textSize">32sp</item>
    </style>


    <!-- Robo Theme. -->
    <style name="RoboTheme" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>


    <style name="shape_image_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/DarkGray</item>
    </style>

    <style name="shape_image_chat_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="shape_image_chat_msg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/shape_image_chat_msg_bg</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/DarkGray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
    </style>




    <style name="StateText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#33000000</item>
    </style>


    <style name="Widget.HeaderBar.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="PagerSlidingTabStrip" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/lightgrey</item>
        <!-- ...and here we setting appcompat’s color theming attrs -->
        <item name="colorPrimary">@color/Green</item>
        <item name="colorPrimaryDark">@color/holo_green_dark</item>
        <item name="colorAccent">@color/yellowGreenColor</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>


    <!-- style title -->
    <style name="StyleTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="MaterialDesignStyle" parent="SwitchButtonStyle">
        <item name="animationVelocity">6</item>
        <item name="insetBottom">10dp</item>
        <item name="insetTop">10dp</item>
        <item name="insetLeft">10dp</item>
        <item name="insetRight">10dp</item>
        <item name="measureFactor">1.4</item>
        <item name="switch_button_offDrawable">@drawable/switch_button_md_back_off</item>
        <item name="switch_button_onDrawable">@drawable/switch_button_md_back_on</item>
        <item name="thumbDrawable">@drawable/switch_button_md_thumb</item>
        <item name="thumb_margin">-17dp</item>
    </style>


    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>


    <style name="CustomFloaterTextAppearance" parent="android:TextAppearance.Small">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:shadowColor">#FFFF0000</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">3</item>
    </style>


    <style name="match_view_dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- Border -->
        <item name="android:windowIsFloating">true</item>
        <!-- Floating on the activity -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Translucent -->
        <item name="android:windowNoTitle">true</item>
        <!-- Background transparence-->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- Blur -->
    </style>


    <style name="UltimateRecyclerviewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
    </style>


    <style name="FlipViewPagerLinearLayout.Interests">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="FlipViewPagerTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FlipViewPagerTextView.Interest" parent="FlipViewPagerTextView">
        <item name="android:background">@drawable/flip_view_pager_round_textview</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FlipViewPagerTextView.Nickname" parent="FlipViewPagerTextView">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="FlipViewPagerLinearLayout" />

    <style name="MaterialDataTimePickerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#00796b</item>
